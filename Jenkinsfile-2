pipeline {
  agent any
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Deploy') {
      steps {
	    sh '/usr/local/bin/docker login -u lmbaschiera -p Mb5h1zn4z'
	    sh '/usr/local/bin/docker context ls'
        sh '/usr/local/bin/docker context use default'
		sh '/usr/local/bin/docker compose build'
		sh '/usr/local/bin/docker compose push'
		sh '/usr/local/bin/docker context use ecscontext'
        sh '/usr/local/bin/docker compose up'
        sh '/usr/local/bin/docker compose ps --format json'
      }
    }
  }
}
